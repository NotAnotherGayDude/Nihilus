#pragma once

#include <nihilus-incl/common/config.hpp>

#define NIHILUS_CUDA_9_BIT 1
#define NIHILUS_CUDA_10_BIT 2
#define NIHILUS_CUDA_11_BIT 3
#define NIHILUS_CUDA_12_BIT 4

#undef NIHILUS_GPU_INSTRUCTION_INDEX
#define NIHILUS_GPU_INSTRUCTION_INDEX @NIHILUS_GPU_INSTRUCTIONS@

#ifndef NIHILUS_CHECK_GPU_INSTRUCTIONS
	#define NIHILUS_CHECK_GPU_INSTRUCTIONS(x, y) (x == y)
#endif

static constexpr uint64_t gpu_arch_indices[]{ 0, 1, 2, 3, 4 };

#define NIHILUS_CUDA_9 (NIHILUS_CHECK_GPU_INSTRUCTIONS(NIHILUS_GPU_INSTRUCTION_INDEX, NIHILUS_CUDA_9_BIT) && NIHILUS_ARCH_X64)
#define NIHILUS_CUDA_10 (NIHILUS_CHECK_GPU_INSTRUCTIONS(NIHILUS_GPU_INSTRUCTION_INDEX, NIHILUS_CUDA_10_BIT) && NIHILUS_ARCH_X64)
#define NIHILUS_CUDA_11 (NIHILUS_CHECK_GPU_INSTRUCTIONS(NIHILUS_GPU_INSTRUCTION_INDEX, NIHILUS_CUDA_11_BIT) && NIHILUS_ARCH_ARM64)
#define NIHILUS_CUDA_12 (NIHILUS_CHECK_GPU_INSTRUCTIONS(NIHILUS_GPU_INSTRUCTION_INDEX, NIHILUS_CUDA_12_BIT) && NIHILUS_ARCH_ARM64)

namespace nihilus {

	struct gpu_arch_index_holder {
		static constexpr static_aligned_const gpu_arch_index_raw{ gpu_arch_indices[NIHILUS_GPU_INSTRUCTION_INDEX] };
		static constexpr const uint64_t& gpu_arch_index{ *gpu_arch_index_raw };
	};

}
