{
  "version": 3,
  "configurePresets": [
    {
      "name": "${hostSystemName}-base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "installDir": "${sourceDir}/out/install/${presetName}",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "cl.exe",
        "CMAKE_CXX_COMPILER": "cl.exe"
      },
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "debug-base",
      "hidden": true,
      "inherits": "${hostSystemName}-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "release-base",
      "hidden": true,
      "inherits": "${hostSystemName}-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "release-nihilus-cuda",
      "inherits": "release-base",
      "cacheVariables": {
        "NIHILUS_CUDA_ENABLED": true
      }
    },
    {
      "name": "debug-nihilus-cuda",
      "inherits": "debug-base",
      "cacheVariables": {
        "NIHILUS_CUDA_ENABLED": true
      }
    },
    {
      "name": "release-nihilus-cpu",
      "inherits": "release-base",
      "cacheVariables": {
        "NIHILUS_CPU": true
      }
    },
    {
      "name": "debug-nihilus-cpu",
      "inherits": "debug-base",
      "cacheVariables": {
        "NIHILUS_CPU": true
      }
    },
    {
      "name": "debug-vs-llama-cuda",
      "inherits": "debug-base",
      "cacheVariables": {
        "VS_LLAMA_CUDA": true,
        "NIHILUS_CUDA_ENABLED": true,
        "GGML_CUDA": true,
        "CMAKE_CUDA_ARCHITECTURES": "all-major",
        "LLAMA_CURL": "Off"
      }
    },
    {
      "name": "release-vs-llama-cuda",
      "inherits": "release-base",
      "cacheVariables": {
        "VS_LLAMA_CUDA": true,
        "NIHILUS_CUDA_ENABLED": true,
        "GGML_CUDA": true,
        "CMAKE_CUDA_ARCHITECTURES": "all-major",
        "LLAMA_CURL": "Off"
      }
    },
    {
      "name": "debug-vs-llama-dev",
      "inherits": "debug-base",
      "cacheVariables": {
        "LLAMA_CURL": "Off",
        "VS_LLAMA_DEV": true,
        "NIHILUS_DEV": true
      }
    },
    {
      "name": "release-vs-llama-dev",
      "inherits": "release-base",
      "cacheVariables": {
        "LLAMA_CURL": "Off",
        "VS_LLAMA_DEV": true,
        "NIHILUS_DEV": true
      }
    },
    {
      "name": "debug-vs-llama-benchmark",
      "inherits": "debug-base",
      "cacheVariables": {
        "LLAMA_CURL": "Off",
        "VS_LLAMA_BENCHMARK": true
      }
    },
    {
      "name": "release-vs-llama-benchmark",
      "inherits": "release-base",
      "cacheVariables": {
        "LLAMA_CURL": "Off",
        "VS_LLAMA_BENCHMARK": true
      }
    },
    {
      "name": "linux-debug",
      "displayName": "Linux Debug",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "installDir": "${sourceDir}/out/install/${presetName}",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      },
      "vendor": {
        "microsoft.com/VisualStudioRemoteSettings/cmake/1.0": {
          "sourceDir": "$env{HOME}/.vs/$ms{projectDirName}"
        }
      }
    },
    {
      "name": "macos-debug",
      "displayName": "macOS Debug",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "installDir": "${sourceDir}/out/install/${presetName}",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Darwin"
      },
      "vendor": {
        "microsoft.com/VisualStudioRemoteSettings/cmake/1.0": {
          "sourceDir": "$env{HOME}/.vs/$ms{projectDirName}"
        }
      }
    }
  ]
}