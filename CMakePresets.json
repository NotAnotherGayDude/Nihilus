{
    "version": 3,
  "configurePresets": [
    {
      "name": "${hostSystemName}-base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "installDir": "${sourceDir}/out/install/${presetName}",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "cl.exe",
        "CMAKE_CXX_COMPILER": "cl.exe"
      },
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "x64-debug-base",
      "hidden": true,
      "inherits": "${hostSystemName}-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "x64-release-base",
      "hidden": true,
      "inherits": "${hostSystemName}-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "x64-debug-nh",
      "inherits": "x64-debug-base",
      "cacheVariables": {
        "NIHILUS_NH_ONLY": true
      }
    },
    {
      "name": "x64-release-nh",
      "inherits": "x64-release-base",
      "cacheVariables": {
        "NIHILUS_NH_ONLY": true
      }
    },
    {
      "name": "x64-debug-cuda",
      "inherits": "x64-debug-base",
      "cacheVariables": {
        "NIHILUS_CUDA": true
      }
    },
    {
      "name": "x64-release-cuda",
      "inherits": "x64-release-base",
      "cacheVariables": {
        "NIHILUS_CUDA": true
      }
    },
    {
      "name": "x64-debug-dev",
      "inherits": "x64-debug-base",
      "cacheVariables": {
        "LLAMA_CURL": "Off",
        "NIHILUS_DEV": true
      }
    },
    {
      "name": "x64-release-dev",
      "inherits": "x64-release-base",
      "cacheVariables": {
        "LLAMA_CURL": "Off",
        "NIHILUS_DEV": true
      }
    },
    {
      "name": "x64-debug-benchmark",
      "inherits": "x64-debug-base",
      "cacheVariables": {
        "LLAMA_CURL": "Off",
        "NIHILUS_BENCHMARK": true
      }
    },
    {
      "name": "x64-release-benchmark",
      "inherits": "x64-release-base",
      "cacheVariables": {
        "LLAMA_CURL": "Off",
        "NIHILUS_BENCHMARK": true
      }
    },
    {
      "name": "x64-debug-clean",
      "inherits": "x64-debug-base",
      "cacheVariables": {
        "LLAMA_CURL": "Off",
        "NIHILUS_CLEAN": true
      }
    },
    {
      "name": "x64-release-clean",
      "inherits": "x64-release-base",
      "cacheVariables": {
        "LLAMA_CURL": "Off",
        "NIHILUS_CLEAN": true
      }
    },
    {
      "name": "linux-debug",
      "displayName": "Linux Debug",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "installDir": "${sourceDir}/out/install/${presetName}",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      },
      "vendor": {
        "microsoft.com/VisualStudioRemoteSettings/cmake/1.0": {
          "sourceDir": "$env{HOME}/.vs/$ms{projectDirName}"
        }
      }
    },
    {
      "name": "macos-debug",
      "displayName": "macOS Debug",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "installDir": "${sourceDir}/out/install/${presetName}",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Darwin"
      },
      "vendor": {
        "microsoft.com/VisualStudioRemoteSettings/cmake/1.0": {
          "sourceDir": "$env{HOME}/.vs/$ms{projectDirName}"
        }
      }
    }
  ]
}